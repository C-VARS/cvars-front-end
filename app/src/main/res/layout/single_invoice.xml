<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.IndividualInvoiceFragment">

    <RelativeLayout
        android:id="@+id/invoiceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invoiceNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice ID"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/invoiceNumLine"
                android:layout_width="200dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/accent_line_black" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On the Way"
                android:textSize="20sp"
                android:textColor="#000">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/basic_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invoiceView"
        android:paddingVertical="15dp">

        <RelativeLayout
            android:id="@+id/priceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/totalPrice"
                android:text="$"
                android:textStyle="bold"
                android:textSize="40dp"
                android:paddingVertical="15dp">
            </TextView>
            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingVertical="15dp"
                android:textStyle="bold"
                android:text="123.45"
                android:textSize="40dp">
            </TextView>
        </RelativeLayout>

        <Button
            android:id="@+id/payNow"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceView"
            android:layout_centerHorizontal="true"
            android:background="@drawable/accent_line_red"
            android:clickable="true"
            android:paddingVertical="15dp"
            android:textColor="#FFF"></Button>


    </RelativeLayout>


    <TableRow
        android:id="@+id/order_columns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/basic_info"
        android:background="@drawable/red_gradient"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="ITEM"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="QTY"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="UNIT PRICE"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="SUBTOTAL"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_columns">
        <TableLayout
            android:id="@+id/invoiceTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TableLayout>

    </ScrollView>

</RelativeLayout>