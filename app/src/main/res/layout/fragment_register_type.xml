<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/red_gradient">

    <Button
        android:id="@+id/driverButton"
        android:layout_width="110dp"
        android:layout_height="72dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="162dp"
        android:background="@drawable/accent_line"
        android:onClick="driverVisibilitySetter"
        android:text="Driver"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customerButton"
        android:layout_width="203dp"
        android:layout_height="76dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/accent_line"
        android:onClick="chooseType"
        android:text="Small Business Owner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverButton"
        android:textSize="17sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/supplierButton"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginTop="136dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/accent_line"
        android:onClick="chooseType"
        android:text="Supplier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerButton"
        android:textSize="17sp"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>