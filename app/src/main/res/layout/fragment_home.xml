<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/red_gradient">

    <RelativeLayout
        android:id="@+id/welcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:paddingVertical="50dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/accent_line">

        <TextView
            android:id="@+id/welcome_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/welcome_home"
            android:text="Name"
            android:textSize="24sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcomeMsg"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="IN-PROGRESS ORDERS" />

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/accent_line" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/inProgressScroller"
        android:layout_width="408dp"
        android:layout_height="277dp"
        android:layout_below="@+id/header1">

    </FrameLayout>
</RelativeLayout>